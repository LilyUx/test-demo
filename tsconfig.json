{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node"                          /* Skip type checking all .d.ts files. */
  },
  "include": ["src"]
}
